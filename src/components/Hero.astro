---
import { Icon } from 'astro-icon/components';

const technologies = [
    { name: 'Docker', icon: 'simple-icons:docker', color: 'text-blue-500' },
    { name: 'Git', icon: 'simple-icons:git', color: 'text-orange-600' },
    { name: 'scikit-learn', icon: 'simple-icons:scikitlearn', color: 'text-orange-500' },
    { name: 'Flutter', icon: 'simple-icons:flutter', color: 'text-blue-400' },
    { name: 'Python', icon: 'simple-icons:python', color: 'text-yellow-500' },
    { name: 'Spring Boot', icon: 'simple-icons:springboot', color: 'text-green-600' },
    { name: 'MySQL', icon: 'simple-icons:mysql', color: 'text-blue-500' },
    { name: 'Tailwind', icon: 'simple-icons:tailwindcss', color: 'text-cyan-400' },
    { name: 'Astro', icon: 'simple-icons:astro', color: 'text-purple-400' },
];
---

<section id="home" class="min-h-screen flex flex-col justify-center items-center pt-20 pb-32 relative overflow-hidden">
    
    <div class="container mx-auto px-6 md:px-12 grid md:grid-cols-2 gap-12 items-center max-w-screen-1xl">
        
        <div class="space-y-8">
            <div class="flex items-center gap-4">
                <span class="text-gray-400 text-2xl font-medium tracking-wide">Hola, Soy Nil Arroyo</span>
            </div>

            <h1 class="text-7xl md:text-9xl font-bold leading-none tracking-tighter">
                Full stack &<br/>
                <span class="shine-text">AI developer</span>
            </h1>
            
            <p class="text-gray-300 max-w-2xl text-2xl leading-relaxed font-light">
                Combino la solidez del Backend (Java/Spring Boot) con una mentalidad analítica orientada a datos. Transformo retos técnicos en soluciones eficientes, robustas y seguras.
            </p>

            <div class="flex gap-6 pt-8">
                <a href="https://github.com/nilarroyo43" target="_blank" class="p-4 bg-gray-800/50 border border-gray-700 rounded-2xl hover:bg-gray-700 hover:border-sky-500/50 transition group">
                    <Icon name="simple-icons:github" class="w-8 h-8 text-gray-300 group-hover:text-white transition" />
                </a>
                <a href="https://www.linkedin.com/in/nil-arroyo/" target="_blank" class="p-4 bg-gray-800/50 border border-gray-700 rounded-2xl hover:bg-gray-700 hover:border-sky-500/50 transition group">
                    <Icon name="simple-icons:linkedin" class="w-8 h-8 text-gray-300 group-hover:text-sky-400 transition" />
                </a>
                <a href="mailto:nilarroyo43@gmail.com" class="p-4 bg-gray-800/50 border border-gray-700 rounded-2xl hover:bg-gray-700 hover:border-sky-500/50 transition group">
                    <Icon name="tabler:mail" class="w-8 h-8 text-gray-300 group-hover:text-red-400 transition" />
                </a>
            </div>
        </div>

        <div class="hidden md:block relative w-full flex justify-center">
             <div class="absolute inset-0 bg-sky-500 blur-[120px] opacity-20 rounded-full pointer-events-none"></div>
             <img src="/Nil_perfil.png" alt="Nil Arroyo" class="relative w-[500px] h-[500px] object-cover rounded-[3rem] border border-gray-700 shadow-2xl rotate-3 hover:rotate-0 transition duration-500 bg-gray-800" />
        </div>
    </div>

    <div class="absolute bottom-0 w-full bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/90 to-transparent pt-32 pb-16 overflow-hidden">
        <div class="relative w-full flex overflow-x-hidden group">
            <div class="carousel-track flex gap-24 items-center animate-scroll whitespace-nowrap px-12">
                {Array(4).fill(technologies).flat().map((tech) => (
                    <div class="flex flex-col items-center gap-3 transition-transform hover:scale-125 duration-300">
                        <Icon name={tech.icon} class={`w-20 h-20 ${tech.color} filter grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition duration-300`} />
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    .shine-text {
        background: linear-gradient(90deg, #fff 0%, #38bdf8 50%, #fff 100%);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shine 3s linear infinite;
    }
    @keyframes shine { 0% { background-position: 0% 50%; } 100% { background-position: 200% 50%; } }
    .carousel-track { width: max-content; }
    .animate-scroll { animation: scroll 60s linear infinite; }
    @keyframes scroll { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }
</style>